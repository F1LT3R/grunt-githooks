#!/usr/bin/env node

// GRUNT-GITHOOK START
// Custom template (not so custom ;)
var exec = require('child_process').exec;

exec('grunt aTask', function (err, stdout, stderr) {
  
  console.log(stdout);

  var exitCode = 0;
  if (err) {
    console.log(stderr);
    exitCode = -1;
  }

  process.exit(exitCode);
});
// GRUNT-GITHOOK END